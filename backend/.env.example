# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=5000

# Database - MongoDB Atlas
# Replace with your actual MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster0.xxxxx.mongodb.net/mern_ecommerce_pro?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
JWT_EXPIRES_IN=7d

# CORS Configuration
# Frontend development server URL
CORS_ORIGIN=http://localhost:5174

# File Upload (Optional - if using Cloudinary)
# CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
# CLOUDINARY_API_KEY=your_cloudinary_api_key
# CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Stripe Payment (Optional - if using Stripe)
# STRIPE_SECRET_KEY=your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Email Configuration (Optional - if using email features)
# EMAIL_FROM=noreply@yourdomain.com
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
